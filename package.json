{
  "name": "scribbles",
  "version": "0.0.1",
  "scripts": {
    "scss": "node_modules/.bin/node-sass public/main.scss dist/public/main.min.css --output-style compressed --source-map-embed",
    "scss-watch": "npm run scss -- -w",
    "build-server": "node_modules/.bin/babel server --out-dir dist/server --source-maps inline --copy-files",
    "build-server-watch": "npm run build-server -- -w",
    "build-client": "node_modules/.bin/babel public --out-dir dist/public --source-maps inline --copy-files",
    "build-client-watch": "npm run build-client -- -w",
    "build": "npm run scss && npm run build-client && npm run build-server",
    "start": "npm run build && node dist/server/index.js"
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.14.0",
    "formidable": "^1.1.1",
    "socket.io": "^1.7.2",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "node-sass": "^4.5.0"
  }
}
